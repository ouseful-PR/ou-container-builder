{% extends 'dockerfile/base.jinja2' %}

{% block from %}
FROM python:3.9-slim-buster
{% endblock %}

{% block pip%}
{{ super() }}
RUN pip install --no-cache-dir jupyter-server-proxy jupyterhub==1.3.0
{% endblock %}

{% block application %}
{{ super() }}
COPY ou-builder-build/start-web-app.sh /usr/bin/start.sh
RUN chmod a+x /usr/bin/start.sh
COPY ou-builder-build/jupyter_server_config.py /etc/jupyter/jupyter_server_config.py
{% endblock %}

EXPOSE 8888

{% block cmd %}
CMD ["start.sh"]
{% endblock%}
